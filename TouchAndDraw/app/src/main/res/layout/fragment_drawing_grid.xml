<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/grid_view"
        android:numColumns="@integer/num_columns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="@dimen/item_horizontal_spacing"
        android:paddingRight="@dimen/gallery_right_margin"
        android:paddingLeft="@dimen/gallery_left_margin"
        android:verticalSpacing="@dimen/item_vertical_spacing"
        android:scrollingCache="false"
        android:background="?attr/colorPrimaryDark"/>

    <include layout="@layout/toolbar_action_bar"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_white_24dp"
        app:fab_colorNormal="@color/holo_blue_dark"
        app:fab_colorPressed="@color/holo_blue_super_dark"
        app:fab_colorRipple="@color/aqua" />

</FrameLayout>
