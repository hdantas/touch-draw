<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/editor_toolbar_height"
    android:background="@color/color_toolbar_editor"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:ignore="Overdraw">


    <net.henriquedantas.android.touchanddraw.ColorfulRadioGroup
        android:id="@+id/buttonShape"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <net.henriquedantas.android.touchanddraw.ColorfulRadioButton
            android:id="@+id/buttonRectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:checked="true"/>

        <ImageView
            android:id="@+id/imageRectangle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/rectangle"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"/>

        <net.henriquedantas.android.touchanddraw.ColorfulRadioButton
            android:id="@+id/buttonTriangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>

        <ImageView
            android:id="@+id/imageTriangle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/triangle"
            android:gravity="center"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/triangle"/>

        <net.henriquedantas.android.touchanddraw.ColorfulRadioButton
            android:id="@+id/buttonCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>

        <ImageView
            android:id="@+id/imageCircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/circle"
            android:gravity="center"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/circle"
            />

    </net.henriquedantas.android.touchanddraw.ColorfulRadioGroup>


    <SeekBar
        android:id="@+id/alphaBar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:max="255"
        android:maxHeight="@dimen/editor_toolbar_height"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:progress="127"/>


    <net.henriquedantas.android.touchanddraw.ToggleButtonGroupTableLayout
        android:id="@+id/buttonColor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TableRow android:layout_weight="1">

            <net.henriquedantas.android.touchanddraw.CircleRadioButton
                android:id="@+id/buttonRed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                app:cb_color="@color/red"
                app:cb_pressedRingWidth="5dip"/>

            <net.henriquedantas.android.touchanddraw.CircleRadioButton
                android:id="@+id/buttonGreen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                app:cb_color="@color/green"
                app:cb_pressedRingWidth="5dip"/>

            <net.henriquedantas.android.touchanddraw.CircleRadioButton
                android:id="@+id/buttonBlue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                app:cb_color="@color/blue"
                app:cb_pressedRingWidth="5dip"/>

            <net.henriquedantas.android.touchanddraw.CircleRadioButton
                android:id="@+id/buttonOrange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                app:cb_color="@color/orange"
                app:cb_pressedRingWidth="5dip"
                />

            <net.henriquedantas.android.touchanddraw.CircleRadioButton
                android:id="@+id/buttonYellow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                app:cb_color="@color/Gold"
                app:cb_pressedRingWidth="5dip"/>

            <net.henriquedantas.android.touchanddraw.CircleRadioButton
                android:id="@+id/buttonPurple"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                app:cb_color="@color/purple"
                app:cb_pressedRingWidth="5dip"/>
        </TableRow>


    </net.henriquedantas.android.touchanddraw.ToggleButtonGroupTableLayout>

</LinearLayout>
