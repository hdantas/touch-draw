<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/drawing_item_imageView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/drawing_item_content_description"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/drawing_item_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/drawing_item_selected"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_done"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/drawing_item_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>