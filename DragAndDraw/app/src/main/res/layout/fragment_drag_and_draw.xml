<LinearLayout
    android:id="@+id/fragmentContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bignerdranch.android.draganddraw.BoxDrawingView
        android:id="@+id/viewBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/shapeOptions"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <RadioGroup
                android:id="@+id/buttonShape"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/buttonRectangle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/rectangle"
                    />

                <RadioButton
                    android:id="@+id/buttonTriangle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/triangle"
                    />

                <RadioButton
                    android:id="@+id/buttonCircle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/circle"/>
            </RadioGroup>

            <SeekBar
                android:id="@+id/alphaBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:progress="127"
                android:max="255"
                />
        </LinearLayout>

        <com.bignerdranch.android.draganddraw.ToggleButtonGroupTableLayout
            android:id="@+id/buttonColor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <com.bignerdranch.android.draganddraw.CircleRadioButton
                    android:id="@+id/buttonRed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    app:cb_color="@color/red"
                    app:cb_pressedRingWidth="5dip"
                    />

                <com.bignerdranch.android.draganddraw.CircleRadioButton
                    android:id="@+id/buttonGreen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    app:cb_color="@color/green"
                    app:cb_pressedRingWidth="5dip"/>

                <com.bignerdranch.android.draganddraw.CircleRadioButton
                    android:id="@+id/buttonBlue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    app:cb_color="@color/blue"
                    app:cb_pressedRingWidth="5dip"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <com.bignerdranch.android.draganddraw.CircleRadioButton
                    android:id="@+id/buttonOrange"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    app:cb_color="@color/orange"
                    app:cb_pressedRingWidth="5dip"
                    />

                <com.bignerdranch.android.draganddraw.CircleRadioButton
                    android:id="@+id/buttonYellow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    app:cb_color="@color/Gold"
                    app:cb_pressedRingWidth="5dip"/>

                <com.bignerdranch.android.draganddraw.CircleRadioButton
                    android:id="@+id/buttonPurple"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    app:cb_color="@color/purple"
                    app:cb_pressedRingWidth="5dip"
                    android:checked="true"/>
            </TableRow>
        </com.bignerdranch.android.draganddraw.ToggleButtonGroupTableLayout>

    </LinearLayout>

</LinearLayout>
